                    <td>${username}</td>
                    <td>${password}</td>
                    <td>${position === 'level2' ? 'Level 2 Author' : 'Level 1 Author'}</td>
                    <td>${creationDate}</td>
                `;
                newRow.onclick = () => alert(`Redirect to ${name} profile`);
                tableBody.appendChild(newRow);
                document.getElementById('createAuthorModal').classList.add('hidden');
            });

            closeCreateModal.addEventListener('click', () => {
                console.log('Close create modal clicked');
                document.getElementById('createAuthorModal').classList.add('hidden');
            });

            // Upload Vehicle Type Form
            const uploadVehicleTypeFormData = document.getElementById('uploadVehicleTypeFormData');
            const closeUploadModal = document.getElementById('close-upload-modal');
            uploadVehicleTypeFormData.addEventListener('submit', (e) => {
                e.preventDefault();
                console.log('Upload vehicle type form submitted');
                const formData = new FormData(uploadVehicleTypeFormData);
                const vehicleTypeName = formData.get('vehicleTypeName');
                const publishedAt = new Date().toLocaleDateString();
                const publishedBy = 'John Doe';

                const tableBody = document.querySelector('#vehicleTypeTableBody');
                const newRow = document.createElement('tr');
                newRow.setAttribute('data-type', vehicleTypeName.toLowerCase());
                newRow.innerHTML = `
                    <td>${vehicleTypeName}</td>
                    <td><img src="https://via.placeholder.com/50" alt="${vehicleTypeName}" class="category-image"></td>
                    <td>${publishedAt}</td>
                    <td>${publishedBy}</td>
                    <td></td>
                `;
                newRow.onclick = () => alert(`Redirect to ${vehicleTypeName} details`);
                tableBody.appendChild(newRow);
                document.getElementById('uploadVehicleTypeModal').classList.add('hidden');
            });

            closeUploadModal.addEventListener('click', () => {
                console.log('Close upload modal clicked');
                document.getElementById('uploadVehicleTypeModal').classList.add('hidden');
            });

            // Initial Load
            showContent('content');
        });
    </script>
</body>
