    <script>
        // Mobile Menu Script
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
        const closeMobileMenuButton = document.getElementById('close-mobile-menu');

        const toggleMenu = () => {
            mobileMenuOverlay.classList.toggle('mobile-menu-open');
            mobileMenuBackdrop.classList.toggle('active');
        };

        mobileMenuButton.addEventListener('click', toggleMenu);
        closeMobileMenuButton.addEventListener('click', toggleMenu);
        mobileMenuBackdrop.addEventListener('click', toggleMenu);

        // Search Functionality
        document.getElementById('search-button').addEventListener('click', () => {
            const query = document.getElementById('search-input').value;
            alert('Search: ' + query);
        });

        // Auth Simulate
        const isSignedIn = false;
        if (isSignedIn) {
            document.getElementById('auth-link').innerHTML = 'Profile';
        }

        // Comment Posting
        document.getElementById('post-comment').addEventListener('click', () => {
            if (!isSignedIn) {
                window.location.href = '/signin';
            } else {
                const comment = document.getElementById('comment-input').value;
                if (comment) {
                    const commentSection = document.getElementById('comment-section');
                    const commentDiv = document.createElement('div');
                    commentDiv.className = 'flex mb-4';
                    commentDiv.innerHTML = `
                        <img src="https://placehold.co/40x40?text=User" alt="User" class="w-10 h-10 rounded-full mr-3">
                        <div class="flex-1">
                            <div class="flex justify-between items-center">
                                <span class="font-semibold">CurrentUser</span>
                                <div class="flex space-x-2">
                                    <button class="text-gray-300 hover:text-red-600">Like</button>
                                    <button class="text-gray-300 hover:text-red-600">Reply</button>
                                    <button class="text-gray-300">...</button>
                                </div>
                            </div>
                            <p class="text-gray-300 mt-1">${comment}</p>
                            <span class="text-xs text-gray-400">Just now</span>
                        </div>
                    `;
                    commentSection.appendChild(commentDiv);
                    document.getElementById('comment-input').value = '';
                }
            }
        });

        // Expand Comments
        document.getElementById('expand-comments').addEventListener('click', () => {
            document.getElementById('comment-section').classList.toggle('expanded');
        });

        // Highlight Nav
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('#desktop-nav-links a, .mobile-nav-link').forEach(link => {
                if (link.getAttribute('href') === '/usa/news') {
                    link.classList.add('bg-red-700');
                }
            });
        });
    </script>
