<%- include('../partials/head.ejs', { title: 'News title' }) %>

        body {
            background-color: #000000;
            font-family: 'Poppins', sans-serif;
        }
        .box-hover-effect {
            transition: transform 0.3s ease-in-out;
        }
        .box-hover-effect:hover {
            transform: scale(1.02);
        }
        .expandable {
            transition: max-height 0.5s ease-in-out;
            overflow: hidden;
            max-height: 0;
        }
        .expanded {
            max-height: 1000px; /* Adjustable based on content */
        }
        .comment-section {
            max-height: 400px; /* Initial height */
            overflow-y: auto;
        }
        .comment-section.expanded {
            max-height: 800px; /* Expanded height */
        }
        .specs-group {
            cursor: pointer;
            transition: background 0.3s;
        }
        .specs-group:hover {
            background: #333;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col text-white">
    
<%- include('../partials/navbar') %>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8 max-w-screen-2xl">
        <!-- Author Info -->
        <section class="bg-gradient-to-b from-red-500 to-black rounded-xl shadow-xl p-6 mb-8 flex items-center">
            <img src="https://placehold.co/50x50?text=Author" alt="Author Profile" class="w-12 h-12 rounded-full mr-4">
            <div>
                <h3 class="text-lg font-semibold text-white">John Doe</h3>
                <p class="text-sm text-gray-300">Auto Enthusiast | <a href="https://twitter.com/johndoe" class="hover:text-red-600">Twitter</a> | <a href="https://instagram.com/johndoe" class="hover:text-red-600">Instagram</a></p>
            </div>
        </section>

        <!-- News Content -->
        <section class="bg-gradient-to-b from-red-500 to-black rounded-xl shadow-xl p-6 mb-8">
