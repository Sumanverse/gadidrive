        <section class="bg-gradient-to-b from-red-500 to-black rounded-xl shadow-xl p-6 mb-8">
            <h2 class="text-2xl font-bold text-white mb-4">Sources</h2>
            <ul class="text-gray-300 list-disc pl-5">
                <li><a href="https://example.com/news1" class="hover:text-red-600">Source 1</a></li>
