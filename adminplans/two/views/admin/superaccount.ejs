<script>
    document.addEventListener('DOMContentLoaded', () => {
        console.log('DOM fully loaded');

        // --- EJS Data ---
        const USERS_DATA = JSON.parse('<%- JSON.stringify(users || []) %>');
        const VEHICLE_TYPES_DATA = JSON.parse('<%- JSON.stringify(vehicleTypes || []) %>');

        // ========== BEAUTIFUL NOTIFICATION FUNCTION ==========
        const showNotification = (message, type = 'success') => {
            // Remove existing notifications
            document.querySelectorAll('.notification-card').forEach(card => card.remove());
            
            const card = document.createElement('div');
            card.className = `notification-card ${type}`;
            card.innerHTML = `
                <button class="close-btn" onclick="this.parentElement.remove()">&times;</button>
                <h4>${type === 'success' ? 'Success!' : 'Error!'}</h4>
                <p>${message}</p>
            `;
            
            document.body.appendChild(card);
            setTimeout(() => card.classList.add('show'), 100);
            
            setTimeout(() => {
                card.style.animation = 'slideOut 0.4s cubic-bezier(0.25, 0.8, 0.25, 1) forwards';
                setTimeout(() => card.remove(), 400);
            }, 4000);
        };

        // ========== CONFIRMATION DIALOG (BEAUTIFUL) ==========
        const showConfirmation = (title, message, onConfirm) => {
            const dialog = document.createElement('div');
            dialog.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-10000';
            dialog.innerHTML = `
                <div class="bg-gray-800 rounded-lg p-6 w-full max-w-md">
                    <h3 class="text-xl font-bold text-white mb-4">${title}</h3>
                    <p class="text-gray-300 mb-6">${message}</p>
                    <div class="flex justify-end space-x-3">
                        <button onclick="this.parentElement.parentElement.parentElement.remove()" 
                                class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">
                            Cancel
                        </button>
                        <button onclick="this.parentElement.parentElement.parentElement.remove(); ${onConfirm}" 
                                class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">
                            Delete
                        </button>
                    </div>
                </div>
            `;
            document.body.appendChild(dialog);
        };

        // ========== TOGGLE MAIN CONTENT (USERS/CONTENT) ==========
        window.showContent = (type) => {
            const contentArea = document.getElementById('contentArea');
            const subToggleSection = document.getElementById('subToggleSection');
            document.querySelectorAll('.toggle-item').forEach(item => {
                item.classList.toggle('bg-red-600', item.getAttribute('onclick') === `showContent('${type}')`);
                item.classList.toggle('hover:bg-red-600', item.getAttribute('onclick') !== `showContent('${type}')`);
            });

            contentArea.innerHTML = '';
            subToggleSection.classList.add('hidden');
            subToggleSection.innerHTML = '';

            switch (type) {
                case 'content':
                    subToggleSection.classList.remove('hidden');
                    subToggleSection.innerHTML = `
                        <button class="sub-toggle-item bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition" onclick="showSubContent('category')">Category</button>
                        <button class="sub-toggle-item bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition" onclick="showSubContent('brand')">Brand</button>
                        <button class="sub-toggle-item bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition" onclick="showSubContent('model')">Model</button>
                        <button class="sub-toggle-item bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition" onclick="showSubContent('news')">News</button>
                        <button class="sub-toggle-item bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition" onclick="showSubContent('vehicleType')">Vehicle Type</button>
                    `;
                    showSubContent('vehicleType'); // DEFAULT VEHICLE TYPE
                    break;
                case 'users':
                    const usersRows = USERS_DATA.map(user => `
                        <tr>
                            <td><img src="${user.profile_picture || 'https://via.placeholder.com/50'}" alt="${user.name}" class="user-image"></td>
                            <td>${user.name}</td>
                            <td>${user.username}</td>
                            <td>${user.position === 'level2' ? 'Level 2 Author' : user.position === 'level1' ? 'Level 1 Author' : user.position}</td>
                            <td>${new Date(user.created_date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</td>
                            <td>
                                <button class="icon-button text-blue-500 hover:text-blue-700 mr-2" onclick="editUser('${user.id}'); event.stopPropagation();">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                                    </svg>
                                </button>
                                <button class="icon-button text-red-500 hover:text-red-700" onclick="deleteUser('${user.id}'); event.stopPropagation();">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    `).join('');

                    contentArea.innerHTML = `
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Username</th>
                                        <th>Position</th>
                                        <th>Creation Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="usersTableBody">
                                    ${usersRows}
                                </tbody>
                            </table>
                        </div>
                        <div class="flex justify-start mt-6">
                            <button id="createAuthorButton" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">Create Author</button>
                        </div>
                    `;

                    document.getElementById('createAuthorButton').addEventListener('click', () => {
                        document.getElementById('createAuthorModal').classList.remove('hidden');
                    });
                    break;
            }
        };

        // ========== COMPLETE SUB-CONTENT (CATEGORY, BRAND, MODEL, NEWS, VEHICLE TYPE) ==========
        window.showSubContent = (type) => {
            const contentArea = document.getElementById('contentArea');
            document.querySelectorAll('.sub-toggle-item').forEach(item => {
                item.classList.toggle('bg-red-600', item.getAttribute('onclick') === `showSubContent('${type}')`);
                item.classList.toggle('hover:bg-red-600', item.getAttribute('onclick') !== `showSubContent('${type}')`);
            });

            let contentHTML = '';
            const vehicleTypeOptions = VEHICLE_TYPES_DATA.map(v => `<option value="${v.vechicle_type_name.toLowerCase()}" data-name="${v.vechicle_type_name}">${v.vechicle_type_name}</option>`).join('');

            switch (type) {
                case 'category':
                    contentHTML = `
                        <select class="selector" id="vehicleTypeSelector" onchange="filterCategory(this.value)">
                            <option value="">Select Vehicle Type</option>
                            ${vehicleTypeOptions}
                        </select>
                        <div class="table-container" id="categoryTable">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Category Name</th>
                                        <th>Image</th>
                                        <th>Published At</th>
                                        <th>Published By</th>
                                        <th>Edited By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr data-type="car" onclick="alert('Redirect to SUV details')">
                                        <td>SUV</td>
                                        <td><img src="https://via.placeholder.com/50" alt="SUV" class="category-image"></td>
                                        <td>Oct 10, 2025</td>
                                        <td>John Doe</td>
                                        <td></td>
                                    </tr>
                                    <tr data-type="truck" onclick="alert('Redirect to Truck details')">
                                        <td>Truck</td>
                                        <td><img src="https://via.placeholder.com/50" alt="Truck" class="category-image"></td>
                                        <td>Oct 11, 2025</td>
                                        <td>Jane Smith</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    `;
                    break;

                case 'brand':
                    contentHTML = `
                        <select class="selector" id="vehicleTypeSelector" onchange="filterBrand(this.value)">
                            <option value="">Select Vehicle Type</option>
                            ${vehicleTypeOptions}
                        </select>
                        <div class="table-container" id="brandTable">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Brand Name</th>
                                        <th>Image</th>
                                        <th>Published At</th>
                                        <th>Published By</th>
                                        <th>Edited By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr data-type="car" onclick="alert('Redirect to Toyota details')">
                                        <td>Toyota</td>
                                        <td><img src="https://via.placeholder.com/50" alt="Toyota" class="brand-image"></td>
                                        <td>Oct 10, 2025</td>
                                        <td>John Doe</td>
                                        <td></td>
                                    </tr>
                                    <tr data-type="truck" onclick="alert('Redirect to Ford details')">
                                        <td>Ford</td>
                                        <td><img src="https://via.placeholder.com/50" alt="Ford" class="brand-image"></td>
                                        <td>Oct 12, 2025</td>
                                        <td>Mike Johnson</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    `;
                    break;

                case 'model':
                    contentHTML = `
                        <select class="selector" id="vehicleTypeSelector" onchange="showBrandSelector(this.value)">
                            <option value="">Select Vehicle Type</option>
                            ${vehicleTypeOptions}
                        </select>
                        <select class="selector hidden ml-4" id="brandSelector" onchange="showModelData(this.value)">
                            <option value="">Select Brand</option>
                        </select>
                        <div id="modelTable" class="table-container mt-4 hidden">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Model Name</th>
                                        <th>Price</th>
                                        <th>Image</th>
                                        <th>Published At</th>
                                        <th>Published By</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    `;
                    break;

                case 'news':
                    contentHTML = `
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Publish Date</th>
                                        <th>Published By</th>
                                        <th>Edited By</th>
                                        <th>Image</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr onclick="alert('Redirect to New Car Launch article')">
                                        <td>New Car Launch</td>
                                        <td>Oct 15, 2025</td>
                                        <td>John Doe</td>
                                        <td></td>
                                        <td><img src="https://via.placeholder.com/50" alt="News 1" class="news-image"></td>
                                    </tr>
                                    <tr onclick="alert('Redirect to Auto Show 2025 article')">
                                        <td>Auto Show 2025</td>
                                        <td>Oct 16, 2025</td>
                                        <td>Jane Smith</td>
                                        <td></td>
                                        <td><img src="https://via.placeholder.com/50" alt="News 2" class="news-image"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    `;
                    break;

                case 'vehicleType':
                    const vehicleRows = VEHICLE_TYPES_DATA.map(vehicle => `
                        <tr data-type="${vehicle.vechicle_type_name.toLowerCase()}">
                            <td>${vehicle.vechicle_type_name}</td>
                            <td><img src="${vehicle.vechicle_type_photo_path || 'https://via.placeholder.com/50'}" alt="${vehicle.vechicle_type_name}" class="category-image"></td>
                            <td>${new Date(vehicle.published_date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</td>
                            <td>Admin</td>
                            <td>N/A</td>
                            <td>
                                <button class="icon-button text-blue-500 hover:text-blue-700 mr-2" onclick="editVehicleType('${vehicle.id}'); event.stopPropagation();">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                                    </svg>
                                </button>
                                <button class="icon-button text-red-500 hover:text-red-700" onclick="deleteVehicleType('${vehicle.id}'); event.stopPropagation();">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    `).join('');

                    contentHTML = `
                        <select class="selector" id="vehicleTypeSelector" onchange="filterVehicleType(this.value)">
                            <option value="">Select Vehicle Type</option>
                            ${vehicleTypeOptions}
                        </select>
                        <div class="table-container mt-4">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Vehicle Type Name</th>
                                        <th>Image</th>
                                        <th>Published At</th>
                                        <th>Published By</th>
                                        <th>Edited By</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="vehicleTypeTableBody">
                                    ${vehicleRows}
                                </tbody>
                            </table>
                        </div>
                        <div class="flex justify-start mt-6">
                            <button id="uploadVehicleTypeButton" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">Upload Vehicle Type</button>
                        </div>
                    `;
                    break;
            }
            contentArea.innerHTML = contentHTML;

            // Vehicle Type Button
            if (type === 'vehicleType') {
                document.getElementById('uploadVehicleTypeButton').addEventListener('click', () => {
                    document.getElementById('uploadVehicleTypeModal').classList.remove('hidden');
                });
            }
        };

        // ========== DELETE FUNCTIONS WITH CONFIRMATION + CARDS ==========
        window.deleteUser = async (userId) => {
            showConfirmation(
                'Delete User', 
                'Are you sure you want to delete this user? This action cannot be undone.',
                `async () => {
                    try {
                        const response = await fetch('/admin/superaccount/delete-user/${userId}', { method: 'DELETE' });
                        const result = await response.json();
                        if (response.ok && result.success) {
                            showNotification('User deleted successfully!', 'success');
                            setTimeout(() => window.location.reload(), 1500);
                        } else {
                            showNotification('Error: ' + result.message, 'error');
                        }
                    } catch (error) {
                        showNotification('Failed to delete user', 'error');
                    }
                }`
            );
        };

        window.deleteVehicleType = async (vehicleId) => {
            showConfirmation(
                'Delete Vehicle Type', 
                'Are you sure you want to delete this vehicle type? This action cannot be undone.',
                `async () => {
                    try {
                        const response = await fetch('/admin/superaccount/delete-vehicle-type/${vehicleId}', { method: 'DELETE' });
                        const result = await response.json();
                        if (response.ok && result.success) {
                            showNotification('Vehicle type deleted successfully!', 'success');
                            setTimeout(() => window.location.reload(), 1500);
                        } else {
                            showNotification('Error: ' + result.message, 'error');
                        }
                    } catch (error) {
                        showNotification('Failed to delete vehicle type', 'error');
                    }
                }`
            );
        };

        // ========== FORM SUBMISSIONS ==========
        document.getElementById('createAuthorFormData').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/admin/superaccount/save-user', { method: 'POST', body: formData });
                const result = await response.json();

                if (response.ok && result.success) {
                    showNotification('Author created successfully!', 'success');
                    document.getElementById('createAuthorModal').classList.add('hidden');
                    e.target.reset();
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    showNotification('Error: ' + result.message, 'error');
                }
            } catch (error) {
                showNotification('Failed to create author', 'error');
            }
        });

        document.getElementById('uploadVehicleTypeFormData').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/admin/superaccount/save-vehicle-type', { method: 'POST', body: formData });
                const result = await response.json();

                if (response.ok && result.success) {
                    showNotification('Vehicle type uploaded successfully!', 'success');
                    document.getElementById('uploadVehicleTypeModal').classList.add('hidden');
                    e.target.reset();
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    showNotification('Error: ' + result.message, 'error');
                }
            } catch (error) {
                showNotification('Failed to upload vehicle type', 'error');
            }
        });

        // Modal close
        document.getElementById('close-create-modal').addEventListener('click', () => {
            document.getElementById('createAuthorModal').classList.add('hidden');
            document.getElementById('createAuthorFormData').reset();
        });

        document.getElementById('close-upload-modal').addEventListener('click', () => {
            document.getElementById('uploadVehicleTypeModal').classList.add('hidden');
            document.getElementById('uploadVehicleTypeFormData').reset();
        });

        // Filter functions (same)
        window.filterCategory = (vehicleType) => {
            const tableRows = document.querySelectorAll('#categoryTable tbody tr');
            tableRows.forEach(row => {
                row.style.display = vehicleType ? (row.getAttribute('data-type') === vehicleType ? '' : 'none') : '';
            });
        };

        window.filterBrand = (vehicleType) => {
            const tableRows = document.querySelectorAll('#brandTable tbody tr');
            tableRows.forEach(row => {
                row.style.display = vehicleType ? (row.getAttribute('data-type') === vehicleType ? '' : 'none') : '';
            });
        };

        window.filterVehicleType = (vehicleType) => {
            const tableRows = document.querySelectorAll('#vehicleTypeTableBody tr');
            tableRows.forEach(row => {
                row.style.display = vehicleType ? (row.getAttribute('data-type') === vehicleType ? '' : 'none') : '';
            });
        };

        window.showBrandSelector = (vehicleType) => {
            const brandSelector = document.getElementById('brandSelector');
            const modelTable = document.getElementById('modelTable');
            brandSelector.classList.add('hidden');
            modelTable.classList.add('hidden');
            brandSelector.innerHTML = '<option value="">Select Brand</option>';

            if (vehicleType) {
                const brands = vehicleType === 'car' ? ['Toyota', 'Honda'] : (vehicleType === 'truck' ? ['Ford'] : []);
                brandSelector.innerHTML += brands.map(brand => `<option value="${brand.toLowerCase()}">${brand}</option>`).join('');
                brandSelector.classList.remove('hidden');
            }
        };

        window.showModelData = (brand) => {
            const tableBody = document.querySelector('#modelTable tbody');
            const modelTable = document.getElementById('modelTable');
            tableBody.innerHTML = '';
            modelTable.classList.add('hidden');

            if (brand) {
                let models = [];
                if (brand === 'toyota') {
                    models = [{ name: 'Camry', price: '$25,000', publishedAt: 'Oct 10, 2025', publishedBy: 'John Doe' }];
                } else if (brand === 'honda') {
                    models = [{ name: 'Civic', price: '$22,000', publishedAt: 'Oct 10, 2025', publishedBy: 'John Doe' }];
                } else if (brand === 'ford') {
                    models = [{ name: 'F-150', price: '$35,000', publishedAt: 'Oct 12, 2025', publishedBy: 'John Doe' }];
                }
                tableBody.innerHTML = models.map(model => `
                    <tr onclick="alert('Redirect to ${model.name} details')">
                        <td>${model.name}</td>
                        <td>${model.price}</td>
                        <td><img src="https://via.placeholder.com/50" alt="${model.name}" class="model-image"></td>
                        <td>${model.publishedAt}</td>
                        <td>${model.publishedBy}</td>
                    </tr>
                `).join('');
                modelTable.classList.remove('hidden');
            }
        };

        // Initial load
        showContent('users');
    });
</script>
