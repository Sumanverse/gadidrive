        const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
        const closeMobileMenuButton = document.getElementById('close-mobile-menu');

        const toggleMenu = () => {
            mobileMenuOverlay.classList.toggle('mobile-menu-open');
            mobileMenuBackdrop.classList.toggle('active');
        };

        mobileMenuButton.addEventListener('click', (e) => { e.preventDefault(); toggleMenu(); }, { passive: false });
        mobileMenuButton.addEventListener('touchstart', (e) => { e.preventDefault(); toggleMenu(); }, { passive: false });
        closeMobileMenuButton.addEventListener('click', (e) => { e.preventDefault(); mobileMenuOverlay.classList.remove('mobile-menu-open'); mobileMenuBackdrop.classList.remove('active'); }, { passive: false });
        mobileMenuBackdrop.addEventListener('click', (e) => { e.preventDefault(); mobileMenuOverlay.classList.remove('mobile-menu-open'); mobileMenuBackdrop.classList.remove('active'); }, { passive: false });
        mobileMenuOverlay.addEventListener('click', (e) => e.stopPropagation(), { passive: false });

        // Search Functionality
        document.getElementById('search-button').addEventListener('click', () => {
            const query = document.getElementById('search-input').value;
            if (query) alert('Search for: ' + query);
            else alert('Please enter a search query.');
        });

        // Highlight Active Nav Links
        document.addEventListener('DOMContentLoaded', () => {
            const navLinks = document.querySelectorAll('#desktop-nav-links a, .mobile-nav-link');
            const subNavLinks = document.querySelectorAll('.sub-nav-link');
            const currentPath = window.location.pathname;
            navLinks.forEach(link => {
                if (link.getAttribute('href') === '/usa/compare') {
                    link.classList.add('bg-red-700', 'text-white');
                    link.classList.remove('hover:bg-red-700');
                }
            });
            subNavLinks.forEach(link => {
                if (link.getAttribute('href') === '/usa/brands/car') link.classList.add('active');
            });
        });

        // Dynamic Vehicle Selection
        const numberSelect = document.getElementById('number');
        const compareSelection = document.getElementById('compare-selection');
        const vehicleDivs = [null, document.getElementById('vehicle-3'), document.getElementById('vehicle-4'), document.getElementById('vehicle-5')];

        numberSelect.addEventListener('change', () => {
            const count = parseInt(numberSelect.value);
            vehicleDivs.forEach((div, index) => {
                if (div) div.classList.toggle('hidden', index + 3 > count);
            });
        });

        // Compare Button Functionality
        const compareButton = document.getElementById('compare-button');
        const comparisonTable = document.getElementById('comparison-table');
        const comparisonBody = document.getElementById('comparison-body');

        compareButton.addEventListener('click', () => {
            const count = parseInt(numberSelect.value);
            const categories = [];
            const brands = [];
            const models = [];
            for (let i = 1; i <= count; i++) {
                categories.push(document.getElementById(`category${i}`).value);
                brands.push(document.getElementById(`brand${i}`).value);
                models.push(document.getElementById(`model${i}`).value);
                document.getElementById(`vehicle-name-${i}`).textContent = `${brands[i-1]} ${models[i-1]}`;
            }

            // Placeholder data for comparison
            const prices = ["$100,000 - $120,000", "$150,000 - $170,000", "$80,000 - $90,000", "$110,000 - $130,000", "$90,000 - $100,000"];
            const colors = ["Red, Blue, Black, White", "Black, White, Silver", "Blue, Red, Green", "Silver, Black", "White, Gray"];
            const scores = [5, 4, 3, 2, 1];

            for (let i = 1; i <= 5; i++) {
                document.getElementById(`price-${i}`).textContent = i <= count ? prices[i-1] : '';
                document.getElementById(`color-${i}`).textContent = i <= count ? colors[i-1] : '';
                document.getElementById(`score-${i}`).textContent = i <= count ? `${scores[i-1]}/5` : '';
                document.getElementById(`score-${i}`).setAttribute('data-score', i <= count ? scores[i-1] : 0);
            }

            // Highlight best score
            const scoreCells = document.querySelectorAll('.score-cell');
            if (scoreCells.length >= 2) {
                let maxScore = -1;
                let maxIndex = -1;
                scoreCells.forEach((cell, index) => {
                    const score = parseFloat(cell.getAttribute('data-score'));
                    if (score > maxScore && score > 0) {
                        maxScore = score;
                        maxIndex = index;
                    }
                });
                scoreCells.forEach((cell, index) => {
                    cell.classList.remove('bg-green-600');
                    if (index === maxIndex) cell.classList.add('bg-green-600');
                });
            }

            comparisonTable.style.display = 'block';
        });
    </script>
