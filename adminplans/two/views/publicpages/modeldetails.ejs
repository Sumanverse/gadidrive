<%- include('../partials/head.ejs', { title: 'brandname modelname' }) %>

        body {
            background-color: #000000;
            font-family: 'Poppins', sans-serif;
        }
        .box-hover-effect {
            transition: transform 0.3s ease-in-out;
        }
        .box-hover-effect:hover {
            transform: scale(1.02);
        }
        .filter-button:hover {
            background-color: #DC2626;
            color: #FFFFFF;
        }
        .breadcrumb a:hover {
            color: #DC2626;
        }
        #mobile-menu-overlay {
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
            opacity: 0;
            width: 16rem;
            height: 100%;
            z-index: 1000;
            pointer-events: auto;
            will-change: transform, opacity;
        }
        .mobile-menu-open {
            transform: translateX(0);
            opacity: 1;
        }
        #mobile-menu-backdrop {
            display: none;
            position: fixed;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
            pointer-events: auto;
        }
        #mobile-menu-backdrop.active {
            display: block;
        }
        .sub-nav-link {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            transition: background-color 0.3s ease;
        }
        .sub-nav-link:hover .icon {
            background-color: #DC2626;
        }
        .sub-nav-link:hover span {
            color: #DC2626;
        }
        .sub-nav-link.active .icon {
            background-color: #DC2626;
        }
        .sub-nav-link.active span {
            color: #DC2626;
        }
        .sub-nav-link span {
            color: #FFFFFF;
        }
        .sub-nav-link .icon {
            width: 3rem;
            height: 3rem;
            border-radius: 0.5rem;
        }
        .color-circle {
            position: relative;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            cursor: pointer;
            border: 2px solid white;
            transition: transform 0.3s;
        }
        .color-circle:hover {
            transform: scale(1.1);
        }
        .color-name {
            display: none;
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0,0,0,0.7);
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 12px;
            white-space: nowrap;
            z-index: 10;
        }
        .color-circle:hover .color-name {
            display: block;
        }
        .specs-group {
            cursor: pointer;
            transition: background 0.3s;
        }
        .specs-group:hover {
            background: #333;
        }
        .expandable {
            transition: max-height 0.5s ease-in-out;
            overflow: hidden;
            max-height: 0;
        }
        .expanded {
            max-height: 500px; /* Adjust based on content */
        }
        .read-more-btn {
            color: #DC2626;
            cursor: pointer;
        }
    </style>
</head>
