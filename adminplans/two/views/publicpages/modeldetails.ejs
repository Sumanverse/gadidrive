        });
        // Auth simulate
        const isSignedIn = false;
        if (isSignedIn) {
            document.getElementById('auth-link').innerHTML = 'Profile';
        }

        // Highlight Nav
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('#desktop-nav-links a, .mobile-nav-link').forEach(link => {
                if (link.getAttribute('href') === '/usa/brands') {
                    link.classList.add('bg-red-700');
