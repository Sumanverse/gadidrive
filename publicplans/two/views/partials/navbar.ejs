<header class="sticky top-0 z-50 font-['Poppins']">
    <div id="navbar-main" class="relative w-full px-4 sm:px-6 lg:px-8 py-5 transition-all duration-300">
        <div id="navbar-bg" class="absolute inset-0 bg-black opacity-0 transition-opacity duration-300"></div>
        
        <nav class="relative container mx-auto flex items-center">

            <!-- Desktop Logo & Menu (unchanged) -->
            <div class="hidden lg:block flex-shrink-0">
                <a href="/" class="text-4xl sm:text-5xl font-bold text-white tracking-tighter">
                    Gya<span class="text-red-600 drop-shadow-lg">rage</span>
                </a>
            </div>

            <div class="hidden lg:flex items-center flex-1 ml-5">
                <ul class="flex items-center gap-3">
                    <% const navItems = [
                        { name: 'Brands',   path: '/brands',   page: 'brands' },
                        { name: 'Category', path: '/category', page: 'category' },
                        { name: 'Compare',  path: '/compare',  page: 'compare' },
                        { name: 'News',     path: '/news',     page: 'news' }
                    ]; %>
                    <% navItems.forEach(item => { %>
                    <li>
                        <a href="<%= item.path %>" class="px-8 py-3 text-lg font-bold text-white rounded-xl transition-all duration-200
                            <% if (typeof currentPage !== 'undefined' && currentPage === item.page) { %>
                                bg-red-600 shadow-lg shadow-red-600/40
                            <% } else { %>
                                hover:bg-red-600 active:scale-95
                            <% } %>">
                            <%= item.name %>
                        </a>
                    </li>
                    <% }); %>
                </ul>

                <!-- Desktop Search -->
                <div class="flex-1 max-w-xl ml-16">
                    <form action="/search" method="GET" class="relative">
                        <input type="text" name="q" placeholder="Search..."
                               class="w-full px-6 py-4 pl-12 pr-16 bg-white/10 border border-white/20 rounded-full text-white placeholder-gray-400
                                      focus:outline-none focus:border-red-500 focus:bg-white/20 transition-all duration-200 text-lg font-medium"
                               value="<%= typeof query !== 'undefined' ? query : '' %>">
                        <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        </div>
                        <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 bg-red-600 hover:bg-red-700 text-white p-3 rounded-full transition-all hover:scale-110 active:scale-95">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 12h14m-7-7l7 7-7 7"/>
                            </svg>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Mobile: Menu | Logo | RED Search Icon -->
            <div class="flex lg:hidden items-center justify-between w-full relative">

                <!-- Left: Menu -->
                <button id="mobile-menu-button" class="text-white p-3 hover:bg-white/10 rounded-xl z-50">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>

                <!-- Center: Logo -->
                <a href="/" class="absolute left-1/2 -translate-x-1/2 text-4xl font-extrabold text-white tracking-tighter z-10 pointer-events-none">
                    Gya<span class="text-red-600 drop-shadow-lg">rage</span>
                </a>

                <!-- Right: RED Search Icon -->
                <button id="mobile-search-toggle" class="text-red-600 p-3 hover:bg-red-600/20 rounded-xl z-50 transition-colors">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </button>
            </div>
        </nav>

        <!-- Mobile Animated Search (covers logo + search icon) -->
        <div id="mobile-search-container" class="lg:hidden absolute inset-x-0 top-16 px-6 pointer-events-none z-40">
            <form action="/search" method="GET" class="search-box pointer-events-auto">
                <input type="text" name="q" placeholder=" " class="search-input" autocomplete="off">
                <button type="button" class="reset-btn"></button>
            </form>
        </div>
    </div>

    <!-- Mobile Menu Sidebar (unchanged) -->
    <div id="mobile-menu-backdrop" class="fixed inset-0 bg-black/90 hidden z-40"></div>
    <div id="mobile-menu-overlay" class="fixed top-0 left-0 h-full w-80 max-w-[90vw] bg-gradient-to-br from-black to-gray-900 border-r-4 border-red-600 transform -translate-x-full transition-transform duration-300 z-50 overflow-y-auto">
        <div class="p-6 border-b border-white/10 bg-black/60 flex justify-between items-center">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-red-600 rounded-2xl flex items-center justify-center"><span class="text-3xl font-bold text-white">G</span></div>
                <h2 class="text-2xl font-extrabold text-white">Gyarage</h2>
            </div>
            <button id="close-mobile-menu" class="text-white p-3 hover:bg-white/10 rounded-xl">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
        <div class="p-6 space-y-4">
            <% navItems.forEach(item => { %>
            <a href="<%= item.path %>" class="block">
                <div class="py-5 text-center text-xl font-bold rounded-2xl transition-all <%= (typeof currentPage !== 'undefined' && currentPage === item.page) ? 'bg-red-600 text-white' : 'bg-white/10 hover:bg-red-600 hover:text-white' %>">
                    <%= item.name %>
                </div>
            </a>
            <% }); %>
        </div>
    </div>
</header>

<!-- Premium Animated Search CSS (covers logo + red icon) -->
<style>
.search-box {
    --size: 3.4rem;
    --frame-color: #ffffff;
    --frame-thickness: 3px;
    --open-width: calc(100vw - 3rem);
    font-size: 1.3rem;
    border: solid var(--frame-thickness) var(--frame-color);
    border-radius: var(--size);
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    transform: translateY(-150%);
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.68, -0.55, 0.27, 1.55);
}
.search-box.open {
    transform: translateY(0);
    opacity: 1;
}
.search-input {
    font-family: inherit;
    font-weight: bold;
    width: var(--size);
    height: var(--size);
    padding: 0.4em 2.4em 0.4em 2em;
    border: none;
    background: transparent;
    color: white;
    box-sizing: border-box;
    border-radius: var(--size);
    transition: width 0.8s cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.1s;
}
.search-input::placeholder { color: transparent; }
.search-input:focus::placeholder,
.search-input:not(:placeholder-shown)::placeholder { color: #94a3b8; }
.search-input:focus,
.search-input:not(:placeholder-shown) {
    width: var(--open-width);
    outline: none;
}
.search-input:focus + .reset-btn,
.search-input:not(:placeholder-shown) + .reset-btn {
    transform: rotate(-45deg) translateY(0);
}
.reset-btn {
    background: transparent;
    width: 1.4em; height: 1.4em;
    border: 0; padding: 0;
    position: absolute;
    top: calc(var(--size)/2 - 0.7em);
    right: calc(var(--size)/2 - 0.7em);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transform: rotate(-45deg) translateY(calc(var(--size) - var(--frame-thickness)));
    transition: transform 0.15s ease-out 0.15s;
    z-index: 10;
}
.reset-btn::before,
.reset-btn::after {
    content: "";
    background: var(--frame-color);
    width: var(--frame-thickness);
    height: 1.4em;
    position: absolute;
}
.reset-btn::after {
    transform: rotate(90deg);
    opacity: 0;
    transition: opacity 0.15s ease-out 0.8s;
}
.search-input:focus + .reset-btn::after,
.search-input:not(:placeholder-shown) + .reset-btn::after {
    opacity: 1;
}
</style>

<!-- JavaScript - Cross button le fully close garcha -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const navbarBg = document.getElementById('navbar-bg');
    const mobileMenuBtn = document.getElementById('mobile-menu-button');
    const closeMenuBtn = document.getElementById('close-mobile-menu');
    const mobileOverlay = document.getElementById('mobile-menu-overlay');
    const mobileBackdrop = document.getElementById('mobile-menu-backdrop');
    const searchToggle = document.getElementById('mobile-search-toggle');
    const searchContainer = document.getElementById('mobile-search-container');
    const searchBox = searchContainer.querySelector('.search-box');
    const searchInput = searchContainer.querySelector('.search-input');
    const resetBtn = searchContainer.querySelector('.reset-btn');

    // Scroll effect
    window.addEventListener('scroll', () => {
        navbarBg.classList.toggle('opacity-95', window.scrollY > 50);
        navbarBg.classList.toggle('opacity-0', window.scrollY <= 50);
    });

    // Open / Close Search
    const toggleSearch = (open) => {
        if (open) {
            searchBox.classList.add('open');
            setTimeout(() => searchInput.focus(), 400);
        } else {
            searchBox.classList.remove('open');
            searchInput.value = '';
            searchInput.blur();
        }
    };

    searchToggle.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleSearch(!searchBox.classList.contains('open'));
    });

    // Cross (X) button le close garcha
    resetBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        toggleSearch(false);
    });

    // Outside click close
    document.addEventListener('click', (e) => {
        if (!searchContainer.contains(e.target) && !searchToggle.contains(e.target) && searchBox.classList.contains('open')) {
            toggleSearch(false);
        }
    });

    // Mobile Menu
    mobileMenuBtn.addEventListener('click', () => {
        mobileOverlay.classList.remove('-translate-x-full');
        mobileBackdrop.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    });
    closeMenuBtn.addEventListener('click', () => {
        mobileOverlay.classList.add('-translate-x-full');
        mobileBackdrop.classList.add('hidden');
        document.body.style.overflow = '';
    });
    mobileBackdrop.addEventListener('click', () => {
        mobileOverlay.classList.add('-translate-x-full');
        mobileBackdrop.classList.add('hidden');
        document.body.style.overflow = '';
    });
});
</script>