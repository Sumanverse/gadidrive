                                <a href="<%= social.link %>" target="_blank" rel="noopener noreferrer" class="social-link" title="<%= platform %>">
                                    <svg class="social-icon drop-shadow-lg" viewBox="0 0 24 24" fill="currentColor">
                                        <%- iconPath %>
                                    </svg>
                                </a>
                            <% } %>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<main class="flex-grow container mx-auto px-4 py-10 max-w-screen-2xl">
    <h2 class="text-4xl font-bold text-center mb-10">Published Articles</h2>

    <!-- EXACT SAME NEWS GRID AS news.ejs -->
    <section class="news-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-8">
        <% if (articles && articles.length > 0) { %>
            <% articles.forEach(article => { %>
                <a href="/news/<%= article.Article_id %>-<%= article.Article_title.toLowerCase().replace(/[^a-z0-9]+/g, '-') %>" class="block">
                    <div class="p-2 rounded-xl bg-gradient-to-b from-red-600 to-black shadow-lg border-bottom-left-to-right hover:transform cursor-pointer transition-all duration-300">
                        <div class="flex flex-row items-start p-2 rounded-xl h-40">
                            <% if (article.Article_main_image) { %>
                                <img src="<%= article.Article_main_image %>" alt="<%= article.Article_title %>"
                                     class="article-image w-60 h-36 bg-white rounded-lg flex-shrink-0 object-cover"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                <div class="article-image w-60 h-36 bg-white rounded-lg flex-shrink-0 hidden"></div>
                            <% } else { %>
                                <div class="article-image w-60 h-36 bg-white rounded-lg flex-shrink-0"></div>
                            <% } %>
                            <div class="content ml-4 flex-grow text-white flex flex-col justify-between h-36">
                                <div class="article-title text-lg sm:text-2xl font-semibold mb-2 line-clamp-3 flex-grow">
                                    <%= article.Article_title %>
                                </div>
                                <div class="date font-semibold text-lg mt-auto">
                                    <%= new Date(article.published_date || article.created_date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        <% } else { %>
            <div class="col-span-full text-center py-16">
                <p class="text-2xl text-gray-400">No articles published yet.</p>
            </div>
        <% } %>
    </section>
</main>

<%- include('../partials/footer') %>

<script>
    // Same broken image handler as news.ejs
    document.addEventListener('DOMContentLoaded', function() {
        const images = document.querySelectorAll('.article-image');
        images.forEach(img => {
            img.addEventListener('error', function() {
                this.style.display = 'none';
                const fallback = this.nextElementSibling;
                if (fallback) fallback.style.display = 'block';
            });
        });
    });
</script>
</body>
</html>