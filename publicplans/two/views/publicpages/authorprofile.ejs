<%- include('../partials/head.ejs', { 
    title: author.name + ' - Gyarage Author',
    description: author.bio || 'Check out articles by ' + author.name + ' on Gyarage',
    url: currentUrl,
    image: author.profilePicture
}) %>

<style>
    body {
        background-color: #000000;
        font-family: 'Poppins', sans-serif;
    }

    /* Reusing exact same hover border animation from news.ejs */
    .border-bottom-left-to-right {
        position: relative;
        border-radius: 0.75rem;
        transition: border-radius 0.3s ease;
    }
    .border-bottom-left-to-right:hover {
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }
    .border-bottom-left-to-right:hover::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background-color: #DC2626;
        animation: borderLeftToRight 0.3s ease-in-out forwards;
    }
    @keyframes borderLeftToRight {
        to { width: 100%; }
    }

    .author-header {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        padding: 1rem 0;
        position: relative;
        overflow: hidden;
        border-radius: 20px;
        margin: 25px;
        border: 4px solid white;
    }
    .author-header::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
        opacity: 0.25;
    }

    /* Bigger & Better Avatar */
    .author-avatar {
        width: 180px;
        height: 180px;
        border: 6px solid white;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s ease;
    }
    .author-avatar:hover {
        transform: scale(1.05);
    }

    .social-icon {
        width: 32px;
        height: 32px;
        transition: all 0.3s ease;
    }
    .social-link:hover .social-icon {
        transform: translateY(-5px) scale(1.15);
    }
</style>
</head>
<body class="min-h-screen flex flex-col text-white font-['Poppins'] bg-black">

<%- include('../partials/navbar') %>

<!-- Author Header - Beautiful & Modern -->
<section class="author-header">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center gap-10 max-w-5xl mx-auto">
            <!-- Big Author Photo -->
            <div class="flex-shrink-0">
                <div class="author-avatar rounded-full bg-gray-800 overflow-hidden">
                    <% if (author.profilePicture && author.profilePicture !== '/images/default-avatar.png') { %>
                        <img src="<%= author.profilePicture %>" alt="<%= author.name %>" class="w-full h-full object-cover">
                    <% } else { %>
                        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-red-600 to-black">
                            <span class="text-7xl font-bold"><%= author.name.charAt(0).toUpperCase() %></span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Author Info -->
            <div class="text-center md:text-left flex-1">
                <h1 class="text-5xl md:text-6xl font-bold mb-3"><%= author.name %></h1>
                <p class="text-2xl text-red-100 mb-4">@<%= author.username %></p>
                
                <% if (author.bio) { %>
                    <p class="text-lg leading-relaxed text-red-50 max-w-2xl mb-8"><%= author.bio %></p>
                <% } %>

                <!-- Social Media - Clickable & Animated -->
                <% if (author.socialMedia && author.socialMedia.length > 0) { %>
                    <div class="flex justify-center md:justify-start gap-5">
                        <% author.socialMedia.forEach(social => { 
                            let iconPath = '';
                            let platform = '';
