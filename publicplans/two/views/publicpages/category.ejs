<%- include('../partials/head.ejs', { title: 'USA - category' }) %>

        body {
            background-color: #000000;
        }
        .border-bottom-left-to-right {
            position: relative;
            border-radius: 0.75rem;
        }
        .border-bottom-left-to-right:hover::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background-color: #DC2626;
            animation: borderLeftToRight 0.3s ease-in-out forwards;
        }
        @keyframes borderLeftToRight {
            to {
                width: 100%;
            }
        }
        .filter-button:hover {
            background-color: #DC2626;
            color: #FFFFFF;
        }
        .breadcrumb a:hover {
            color: #DC2626;
        }
        #mobile-menu-overlay {
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
            opacity: 0;
            width: 16rem;
            height: 100%;
            z-index: 1000;
            pointer-events: auto;
            will-change: transform, opacity;
        }
        .mobile-menu-open {
            transform: translateX(0);
            opacity: 1;
        }
        #mobile-menu-backdrop {
            display: none;
            position: fixed;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
            pointer-events: auto;
        }
        #mobile-menu-backdrop.active {
            display: block;
        }
        .vehicle-types-container {
            background-color: #FFFFFF;
            padding: 0.5rem;
            margin: 1rem 0;
        }
        .vehicle-types-selector ul {
            direction: ltr;
            overflow-x: auto;
            white-space: nowrap;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none;
            justify-content: flex-start;
            padding: 0;
        }
        .vehicle-types-selector ul::-webkit-scrollbar {
            display: none;
        }
        .sub-nav-link {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.75rem;
            border-radius: 0.25rem;
            transition: all 0.3s ease;
            min-width: fit-content;
            background: transparent;
            margin: 0 0.25rem;
            position: relative;
            height: 2rem;
        }
        .sub-nav-link:hover {
            background: #DC2626;
        }
        .sub-nav-link:hover .vehicle-type-name {
            color: #FFFFFF;
        }
        .sub-nav-link.active {
            background: #DC2626;
        }
        .sub-nav-link.active .vehicle-type-name {
            color: #FFFFFF;
            font-weight: bold;
        }
        .sub-nav-link .vehicle-type-name {
            color: #DC2626;
            font-weight: bold;
            margin-left: 0.25rem;
            font-size: 0.875rem;
        }
        .category-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background-color: white;
            border-radius: 0.5rem;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col text-white font-['Poppins']">
    
<%- include('../partials/navbar') %>

    <!-- Main Section -->
    <main class="flex-grow container mx-auto px-4 py-4 max-w-screen-2xl">
        <!-- Breadcrumb and Filter -->
        <div class="flex flex-row justify-between items-center mb-4">
            <div class="breadcrumb text-white text-sm sm:text-base flex items-center">
                <a href="/" class="hover:text-red-600">Gyarage</a> 
                <span class="mx-2 text-red-600">&gt;&gt;</span> 
                <a href="/usa" class="hover:text-red-600">USA</a> 
                <span class="mx-2 text-red-600">&gt;&gt;</span> 
                <a href="/usa/category" class="text-red-600 font-bold">Category</a>
            </div>
            <div>
                <button id="filter-button" class="filter-button bg-white text-black text-sm font-semibold px-4 py-2 rounded-lg hover:bg-red-600 hover:text-white transition">
                    Filter
                </button>
            </div>
        </div>

        <!-- Vehicle Types Selector -->
        <section class="vehicle-types-selector mx-auto w-full mt-4">
            <div class="vehicle-types-container">
                <ul class="flex overflow-x-auto gap-2" id="vehicle-types-list">
                    <% if (vehicleTypes && vehicleTypes.length > 0) { %>
                        <% vehicleTypes.forEach((vehicleType, index) => { %>
                            <li>
                                <a href="/category?vehicle_type=<%= vehicleType.vehicle_type_id %>" 
                                   class="sub-nav-link <%= (selectedVehicleType && selectedVehicleType.vehicle_type_id == vehicleType.vehicle_type_id) ? 'active' : '' %>"
                                   data-vehicle-type-id="<%= vehicleType.vehicle_type_id %>">
                                    <span class="vehicle-type-name"><%= vehicleType.vehicle_type_name %></span>
                                </a>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <li class="text-white">No vehicle types available</li>
                    <% } %>
                </ul>
            </div>
        </section>

        <!-- Dynamic Title -->
        <section class="title-section mx-auto max-w-screen-2xl mt-8">
            <div class="text-3xl font-bold text-white mb-6 text-center">
                <% if (selectedVehicleType) { %>
                    All <%= selectedVehicleType.vehicle_type_name %> Categories available in USA
                <% } else { %>
                    All Vehicle Categories available in USA
                <% } %>
            </div>
        </section>

        <!-- Dynamic Categories Section -->
        <section class="categories mx-auto max-w-screen-2xl mt-8">
            <% if (categories && categories.length > 0) { %>
<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
    <% categories.forEach(category => { %>
    <a href="/categorydetails/<%= category.category_id %>" class="block">
        <div class="bg-gradient-to-b from-red-500 to-black rounded-xl shadow-xl transition-all duration-300 p-4 flex flex-col items-center text-center border-bottom-left-to-right shadow-md hover:transform cursor-pointer w-56 mx-auto">
            <% if (category.image_path) { %>
                <img src="<%= category.image_path %>" alt="<%= category.name %>" class="w-44 h-36 object-cover rounded-lg mb-3 shadow-inner">
            <% } else { %>
                <div class="w-44 h-36 bg-white rounded-lg mb-3 shadow-inner border-transparent"></div>
            <% } %>
            <div class="text-white font-semibold text-base line-clamp-1"><b><%= category.name %></b></div>
        </div>
    </a>
    <% }); %>
</div>
            <% } else { %>
                <div class="text-center text-white text-xl py-12">
                    <% if (selectedVehicleType) { %>
                        No categories available for <%= selectedVehicleType.vehicle_type_name %> yet.
                    <% } else { %>
                        No categories available. Please select a vehicle type.
                    <% } %>
                </div>
            <% } %>
        </section>

    </main>

    
<%- include('../partials/footer') %>

    <script>
        // Simulate Sign-In Status (Replace with backend auth later)
        const isSignedIn = false;
        const authLink = document.getElementById('auth-link');
        if (isSignedIn) {
            authLink.innerHTML = '<svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 18.364A4 4 0 018 17h8a4 4 0 012.879 1.364M15 10a3 3 0 11-6 0 3 3 0 016 0zM21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>';
            authLink.href = '/profile';
        } else {
            authLink.textContent = 'Sign In';
            authLink.href = '/signin';
        }

        // Mobile Menu Toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
        const closeMobileMenuButton = document.getElementById('close-mobile-menu');

        if (!mobileMenuButton || !mobileMenuOverlay || !mobileMenuBackdrop || !closeMobileMenuButton) {
            console.error('Mobile menu elements missing:', {
                mobileMenuButton: !!mobileMenuButton,
                mobileMenuOverlay: !!mobileMenuOverlay,
                mobileMenuBackdrop: !!mobileMenuBackdrop,
                closeMobileMenuButton: !!closeMobileMenuButton
            });
            return;
        }

        const toggleMenu = () => {
            console.log('Toggling menu');
            mobileMenuOverlay.classList.toggle('mobile-menu-open');
            mobileMenuBackdrop.classList.toggle('active');
            console.log('Menu state:', mobileMenuOverlay.classList.contains('mobile-menu-open') ? 'Open' : 'Closed');
        };

        mobileMenuButton.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            console.log('Hamburger menu clicked');
            toggleMenu();
        }, { passive: false });

        mobileMenuButton.addEventListener('touchstart', (e) => {
            e.preventDefault();
            e.stopPropagation();
            console.log('Hamburger menu touched');
            toggleMenu();
        }, { passive: false });

        closeMobileMenuButton.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            console.log('Close menu clicked');
            mobileMenuOverlay.classList.remove('mobile-menu-open');
            mobileMenuBackdrop.classList.remove('active');
            console.log('Menu state: Closed');
        }, { passive: false });

        mobileMenuBackdrop.addEventListener('click', (e) => {
            e.preventDefault();
            console.log('Backdrop clicked, closing menu');
            mobileMenuOverlay.classList.remove('mobile-menu-open');
            mobileMenuBackdrop.classList.remove('active');
            console.log('Menu state: Closed');
        }, { passive: false });

        mobileMenuOverlay.addEventListener('click', (e) => {
            e.stopPropagation();
            console.log('Clicked inside menu, preventing close');
        }, { passive: false });

        // Search Functionality (Placeholder)
        document.getElementById('search-button').addEventListener('click', () => {
            const query = document.getElementById('search-input').value;
            if (query) {
                alert('Search for: ' + query);
            } else {
                alert('Please enter a search query.');
            }
        });

        // Filter Functionality (Placeholder)
        document.getElementById('filter-button').addEventListener('click', () => {
            alert('Filter options will be implemented with backend.');
        });

        // Vehicle Type Selection with Active State Management
        document.addEventListener('DOMContentLoaded', () => {
            const vehicleTypeLinks = document.querySelectorAll('.sub-nav-link');
            
            vehicleTypeLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    // Remove active class from all links
                    vehicleTypeLinks.forEach(l => l.classList.remove('active'));
                    // Add active class to clicked link
                    link.classList.add('active');
                    
                    // Scroll to show the active item if it's not fully visible
                    setTimeout(() => {
                        link.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
                    }, 100);
                });
            });

            // Ensure first vehicle type is active by default if none is selected
            if (vehicleTypeLinks.length > 0 && !document.querySelector('.sub-nav-link.active')) {
                vehicleTypeLinks[0].classList.add('active');
            }

            // Highlight Active Nav Links
            const navLinks = document.querySelectorAll('#desktop-nav-links a, .mobile-nav-link');
            const currentPath = window.location.pathname;

            navLinks.forEach(link => {
                if (link.getAttribute('href') === '/category') {
                    link.classList.add('bg-red-700', 'text-white');
                    link.classList.remove('hover:bg-red-700');
                }
            });
        });

        // Auto-scroll to active vehicle type on page load
        window.addEventListener('load', () => {
            const activeVehicleType = document.querySelector('.sub-nav-link.active');
            if (activeVehicleType) {
                setTimeout(() => {
                    activeVehicleType.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
                }, 500);
            }
        });
    </script>
</body>
</html>