<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search: <%= query %> - Gyarage</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Poppins', sans-serif; background: #000; color: white; }
        .wheel { animation: spin 12s linear infinite; filter: drop-shadow(0 0 15px rgba(220,38,38,0.5)); }
        .wheel:hover { animation: spin 0.5s linear infinite; filter: drop-shadow(0 0 40px rgba(220,38,38,1)); }
        @keyframes spin { to { transform: rotate(360deg); } }
        .smoke {
            position: absolute; bottom: -100px; left: 50%; width: 400px; height: 160px;
            background: linear-gradient(to top, rgba(255,255,255,0.3), transparent);
            filter: blur(30px); border-radius: 50%; opacity: 0;
            transform: translateX(-50%); pointer-events: none;
            transition: opacity 1.8s ease-out, bottom 1.8s ease-out; z-index: 1;
        }
        .smoke.active { opacity: 0.8; bottom: -30px; }
    </style>
</head>
<body class="min-h-screen flex flex-col">

    <!-- Navbar (10px margin bottom) -->
    <div class="mb-10">
        <%- include('partials/navbar') %>
    </div>

    <main class="flex-grow flex items-center justify-center px-6">

        <div class="text-center">

            <!-- RESULTS HUNCHA BHANE -->
            <% if (results.length > 0) { %>

                <div class="mb-12">
                    <h1 class="text-4xl md:text-5xl font-bold mb-3">
                        Results for: <span class="text-red-600 font-extrabold">"<%= query %>"</span>
                    </h1>
                    <p class="text-xl text-gray-300"><%= results.length %> items found</p>
                </div>

                <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-8 max-w-7xl mx-auto">
                    <% results.forEach(item => { %>
                        <a href="<%= item.url %>" class="block group transform hover:scale-105 transition-all duration-300">
                            <div class="bg-gradient-to-b from-gray-900 via-black to-black rounded-2xl overflow-hidden shadow-2xl border-2 border-gray-800 hover:border-red-600">
                                <div class="h-56 bg-gray-900 relative">
                                    <% if (item.image && item.image.trim()) { %>
                                        <img src="<%= item.image %>" alt="<%= item.title %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <div class="w-full h-full bg-gray-800 flex items-center justify-center border-4 border-dashed border-gray-700">
                                            <span class="text-gray-500 text-xs">No Image</span>
                                        </div>
                                    <% } %>
                                    <span class="absolute top-3 right-3 px-3 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider border shadow-lg
                                        <% if (item.type === 'Brand') { %> bg-blue-600 border-blue-500 <% }
                                           else if (item.type === 'Model') { %> bg-green-600 border-green-500 <% }
                                           else if (item.type === 'Category') { %> bg-purple-600 border-purple-500 <% }
                                           else if (item.type === 'News') { %> bg-yellow-600 border-yellow-500 text-black <% }
                                           else if (item.type === 'Author') { %> bg-pink-600 border-pink-500 <% }
                                           else { %> bg-orange-600 border-orange-500 <% } %>">
                                        <%= item.type %>
                                    </span>
                                </div>
                                <div class="p-5">
                                    <h3 class="font-bold text-lg text-center group-hover:text-red-400 transition line-clamp-2">
                                        <%= item.title %>
                                    </h3>
                                </div>
                            </div>
                        </a>
                    <% }) %>
                </div>

            <% } else { %>

                <!-- NO RESULT â†’ N (wheel) T + FOUND (SANO RA CLEAN) -->
                <div class="space-y-6">
                    <div class="flex items-center justify-center gap-6">
                        <span class="text-7xl md:text-9xl font-extrabold text-white select-none -mr-8 md:-mr-9">N</span>

                        <div class="relative">
                            <svg id="wheel" width="140" height="140" viewBox="0 0 24 24" class="wheel" fill="none" stroke="#DC2626" stroke-width="2">
                                <circle cx="12" cy="12" r="10" stroke="#666" stroke-width="2.8"/>
                                <circle cx="12" cy="12" r="7" stroke="#222" stroke-width="2.2" fill="#111"/>
                                <circle cx="12" cy="12" r="3.2" fill="#DC2626"/>
                                <path d="M12 2v4M12 18v4M2 12h4M18 12h4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83" 
                                      stroke="#DC2626" stroke-width="2.4"/>
                            </svg>
                            <div id="smoke" class="smoke"></div>
                        </div>

                        <span class="text-7xl md:text-9xl font-extrabold text-white select-none -ml-8 md:-ml-9">T</span>
                    </div>

                    <div class="text-6xl md:text-8xl font-extrabold text-red-600">
                        FOUND
                    </div>

                    <!-- Tala ma info -->
                    <div class="mt-12 space-y-3">
                        <h2 class="text-3xl md:text-4xl font-bold">
                            Results for: <span class="text-red-600">"<%= query %>"</span>
                        </h2>
                        <p class="text-xl text-gray-400">0 items found</p>
                    </div>
                </div>

            <% } %>

        </div>
    </main>

    <!-- Footer (10px margin top) -->
    <div class="mt-10">
        <%- include('partials/footer') %>
    </div>

    <!-- Smoke effect only when no results -->
    <% if (results.length === 0) { %>
    <script>
        const wheel = document.getElementById('wheel');
        const smoke = document.getElementById('smoke');
        let timer;
        wheel.addEventListener('mouseenter', () => {
            timer = setTimeout(() => smoke.classList.add('active'), 2500);
        });
        wheel.addEventListener('mouseleave', () => {
            clearTimeout(timer);
            smoke.classList.remove('active');
        });
    </script>
    <% } %>

</body>
</html>